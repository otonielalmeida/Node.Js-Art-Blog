<!DOCTYPE html>

<head>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="./css/managePosts.css">
    <link rel="stylesheet" type="text/css" href="DataTables/datatables.min.css"/>
 
    <script type="text/javascript" ></script>
    <title>Gerenciar Posts</title>
</head>

<body>
    <nav class="navbar fixed-top">
        <ul>
            <a href="/posts">Articles</a>
        </ul>
        <div class="nav_bar_right">
            <ul>
                <a href="/newPost">Post A New Piece</a>
            </ul>
        </div>

    </nav>
    <div class="list_div">
        <div class="post_header">
            <h4 class="">Lista de Posts</h4>
        </div>
       
        
        <div class="input-group mb-3">
            <table style="width:108.5%" id="content_Table" class="table table-striped table-hover table-sm">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Autor</th>
                        <th>Descrição</th>
                        <th></th>
                    </tr>
                </thead>
                <% for (var i=0; i < loadPosts.length; i++) { %>
                    <tr>
                        <td><%= loadPosts[i].title %></td>
                        <td><%= loadPosts[i].author %></td>
                        <td><%= loadPosts[i].description %></td>
                        <td>
                            <button class="btn btn-danger" value="Delete"><a href="/posts/delete/<%= loadPosts[i]._id%>">Delete</a></button>
                        </td>
                    </tr>
                    
                <% } %>
            </table>
          </div>
        
    </div>
    
</body>
<script src="./DataTables/jQuery-3.6.0/jquery-3.6.0.min.js"></script>
<script type="text/javascript" src="DataTables/datatables.min.js"></script>
<script>
    setInterval(function () {
        /* $.fn.dataTable.ext.errMode = 'none'; */
        $(document).ready( function () {
        $('#content_Table').DataTable( 
            /* { "width": "100%" } */
        )
        });
    }, 1)
</script>

</html>